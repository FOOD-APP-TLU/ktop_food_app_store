<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#F4E6D7"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <!-- Hình ảnh món ăn -->
        <androidx.cardview.widget.CardView
            android:layout_width="87dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/top_item_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:contentDescription="Hình ảnh món ăn"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- Thông tin món ăn -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/top_item_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/annapurna_sil"
                android:text="Item Name"
                android:textColor="#78420A"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/top_item_quantity_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/annapurna_sil"
                android:text="Sold: 0"
                android:textColor="#5B2F01"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>